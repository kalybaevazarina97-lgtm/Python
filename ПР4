    else:
number = 1
print(f"{number-1},{number},{number + 1}")
#2
file_name = input("Введите имя файла с асширением: ")
extension = file_name.split('.')[1] 
if extension == "doc":
    print("Это документ Word.")
elif extension == "py":
    print("Это файл Python.")
elif extension == "txt":
    print("Это текстовый файл.")
else:
    print("Неизвестное расширение файла.")
#3
a = float(input("Введите длину первойстороны: "))
b = float(input("Введите длину второй стороны:"))
c = float(input("Введите длину третьейстороны: "))
if a == b == C:
    print("Это равносторонний треугольник.")
elif a == b or b == c or a == c:
    print("Это равнобедренный треугольник.")
else:
    print("Это разносторонний треугольник.")
