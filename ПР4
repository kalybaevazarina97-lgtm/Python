a = int(input ("Введите первоемчисло: ") )
b = int(input("Введите второе число: "))
if a % 3 == 0 and b % 3 == 0:
    print (True)
elif a % 3 == 0 or b % 3 == 0:
    print ("Одно число делится на 3" )
else:
    print (False)
